<div class="w3-sand padd_top_long hero_container">
  <div class="w3-content w3-white form_length_50 w3-animate-bottom">
    <div class="w3-container w3-teal w3-animate-bottom">
      <h2>New Data entry</h2>
    </div>
    <form
      class="w3-container form_margin w3-animate-bottom"
      method="POST"
      action="/data/add"
    >
      <label class="w3-text-teal form_margin"><b>Send to</b></label>
      <input
        class="w3-input w3-border w3-light-grey form_margin"
        type="text"
        name="send_to"
        placeholder="recievers email address"
      />
      <label class="w3-text-teal form_margin"><b>Subject</b></label>
      <input
        class="w3-input w3-border w3-light-grey form_margin"
        type="text"
        name="subject"
        placeholder="Subject"
      />
      <label class="w3-text-teal form_margin"><b>Message</b></label>
      <input
        class="w3-input w3-border w3-light-grey form_margin"
        type="text"
        name="message"
        placeholder="Message"
        style="width: 100%; height: 6rem"
      />
      <input class="w3-btn w3-teal w3-margin" type="submit" value="Send" onClick="sendMail()"/>
    </form>
  </div>
</div>

